<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="tomn114.com.app">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="tomn114.com.app.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="tomn114.com.app.GameActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="tomn114.com.app.InstructionsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="tomn114.com.app.LoadingActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="tomn114.com.app.ResultsActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>